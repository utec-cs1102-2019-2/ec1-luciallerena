#include <iostream>

using namespace std;

int main(){
  int fil=10;
  int col=10;
  int **matrix = nullptr;
  matrix = new int *[fil];
    for (int i = 0; i < fil; i++) {
      matrix[i] = new int[col];
      for (int j = 0; j < col; j++) {
          matrix[i][j]=rand()%(2-0) + (i * 100) + (j * 10);
        }
    }
   char **m=nullptr;
   m=new char *[fil];
   for (char i = 0;i < fil; i++) {
     m[i]=new char[col];
        for (char j = 0; j < col; j++) {
            m[i][j]="-";
            int n=0;
            cout<<"Ingrese posicion";
            cin>>n;
            while(n%0){
              cout << m[i][j] << "\t";
            }
            cout<<endl;
        }cout<<endl;
   }
   
    else(){
      cout<<"Perdio"
    }
  return 0;
}
